    "mongoose": "^5.9.15",
    "next": "latest",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-icons": "3.10.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.2.0",
    "@types/hapi__joi": "^17.1.0",
    "@types/node": "^12.12.42",
    "@types/react": "^16.8.17",
    "@types/react-dom": "16.8.4",
    "dotenv": "8.2.0",
    "nodemon": "^1.19.0",
    "postcss-preset-env": "6.7.0",
    "tailwindcss": "1.4.6",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
